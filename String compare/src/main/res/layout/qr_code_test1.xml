<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/scan"
        android:textColor="#00FF0F"
        android:textSize="50sp"
        android:textStyle="bold"
        android:id="@+id/qrCodeScanBtn"
        android:layout_above="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textView"
        android:layout_above="@+id/qrCodeScanBtn"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test1"
        android:id="@+id/qrCodeTest1Title"
        android:textSize="50sp"
        android:textColor="#00FF0D"
        android:textStyle="bold"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="850dp"
        android:layout_height="200dp"
        android:id="@+id/scrollView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text=""
            android:textColor="#00FF0D"
            android:textSize="30sp"
            android:id="@+id/qrCodeTest1Result" />
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textView4"
        android:layout_above="@+id/scrollView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textView5"
        android:layout_below="@+id/scrollView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textView6"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/yes_button"
        android:id="@+id/qrCodeTest1YesBtn"
        android:textColor="#00FF0D"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/textView6"
        android:layout_toLeftOf="@+id/textView6" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/no_button"
        android:textColor="#00FF0D"
        android:textSize="50sp"
        android:textStyle="bold"
        android:id="@+id/qrCodeTest1NoBtn"
        android:layout_alignTop="@+id/textView6"
        android:layout_toRightOf="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/qr_code_test1_tv"
        android:textColor="#00FF0D"
        android:textSize="50sp"
        android:textStyle="bold"
        android:id="@+id/qrCodeTest1TV"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textView9"
        android:layout_below="@+id/qrCodeTest1TV"
        android:layout_centerHorizontal="true" />
</RelativeLayout>